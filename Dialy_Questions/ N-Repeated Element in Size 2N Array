// Map.Entry <Integer,Integer> e ->>>>. One item containing both Key and Value together.



class Solution {
    public int repeatedNTimes(int[] nums) {
         int n = nums.length;
         int valid = n/2;
         Arrays.sort(nums);

         HashMap<Integer,Integer> mp = new HashMap<>();

         for (int i=0;i<n;i++){
            mp.put(nums[i] , mp.getOrDefault(nums[i],0)+1);
         }

         for (Map.Entry <Integer,Integer> e : mp.entrySet()){
            if (e.getValue()==valid) return e.getKey();
         }
         return -1;
    }
}