


class Solution {
    public int minTimeToVisitAllPoints(int[][] points) {
        int n = points.length;
        int ans =0;

        for (int i =0;i<n-1;i++){
            int currx = points[i][0];
            int curry = points[i][1];
            int nextx = points[i+1][0];
            int nexty = points[i+1][1];
             ans += Math.max (Math.abs(nextx - currx) , Math.abs(curry - nexty));

        }
        return ans;
    }
}