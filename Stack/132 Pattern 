// consider 
// use stack whenever u see the forloop dependend on each other 
// 1->  i<j<k.  due to this condition we are tarversing from the back side of the array 
//              so the condition satisfy automatically

// 2->   num1 < num3 < num2
// trickey question 






class Solution {
    public boolean find132pattern(int[] nums) {
        int n = nums.length;
        Stack<Integer> st = new Stack<>();
        int num = Integer.MIN_VALUE;

        for(int i=n-1;i>=0;i--){
                if (nums[i] < num) return true;

            while (!st.isEmpty() && nums[i] > st.peek()){
                num = st.peek();
                st.pop();
            }
            st.push(nums[i]);
        }
        return false;
    }
}